{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "api/analyze.py"
    },
    {
      "src": "/api/projects",
      "dest": "api/auth.py"
    },
    {
      "src": "/api/projects/(.*)",
      "dest": "api/auth.py"
    },
    {
      "src": "/api/verify",
      "dest": "api/auth.py"
    },
    {
      "src": "/api/dashboard/(.*)",
      "dest": "api/reports.py"
    },
    {
      "src": "/api/developers",
      "dest": "api/reports.py"
    },
    {
      "src": "/api/developers/(.*)",
      "dest": "api/reports.py"
    },
    {
      "src": "/api/analyses/(.*)",
      "dest": "api/reports.py"
    }
  ],
  "env": {
    "DATABASE_URL": "@database-url",
    "ENCRYPTION_KEY": "@encryption-key",
    "EMAIL_HOST": "@email-host",
    "EMAIL_PORT": "@email-port",
    "EMAIL_USER_B64": "@email-user-b64",
    "EMAIL_PASS_ENCRYPTED": "@email-pass-encrypted",
    "ADMIN_EMAIL": "@admin-email",
    "ADMIN_API_KEY": "@admin-api-key"
  }
}
